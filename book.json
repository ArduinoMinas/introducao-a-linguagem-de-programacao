{
    "language": "pt",
    "structure": {
        "readme": "introducao.md",
        "glossary": "glossario.md",
        "summary": "sumario.md"
    },
    "plugins": [
        "richquotes",
        "anchors",
        "layout",
        "disqus",
        "extend-default-theme",
        "search",
        "exercises",
        "image-captions",
        "gist",
        "katex",
        "indexes",
        "customtheme",
        "theme-api",
        "theme-default",
        "highlight"
    ],
    "pluginsConfig": { 
        "sharing": {
            "facebook": true,
            "twitter": true,
            "google": true,
            "weibo": false,
            "instapaper": true,
            "vk": false,
            "all": [
                "facebook", "google", "twitter",
                "weibo", "instapaper","vk"
            ]
        },
        "richquotes": {
            "default": true
        },
        "layout": {
            "headerPath": "layouts/header.html",
            "footerPath": "layouts/footer.html"
        },
        "disqus": {
            "shortName": "introduoalinguagemdeprogramaoparaarduino",
            "useIdentifier": true
        },
        "image-captions": {
            "caption": "Image _PAGE_LEVEL_._PAGE_IMAGE_NUMBER_ - _CAPTION_",
            "list_caption": "List image _BOOK_IMAGE_NUMBER_: _CAPTION_",
            "variable_name": "picturesList"
        },
        "autocover": {
            "author": "Carlos Delfino - consultoria@carlosdelfino.eti.br - carlosdelfino.eti.br",
            "font": {
                "size": null,
                "family": "Impact",
                "color": "#FFF"
            },
            "template": "layouts/cover/default.svg",
            "size": {
                "w": 1800,
                "h": 2360
            },
            "background": {
                "color": "#09F"
            }
        }
    },
    "variables": {
        "Version": "0.1"
    }
}